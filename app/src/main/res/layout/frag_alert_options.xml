<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_back_white" />

            </LinearLayout>

            <com.voxgps.app.view.ProximaNovaLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Alert Options"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

        </FrameLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_sos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="SOS"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_sos"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />


            <LinearLayout
                android:id="@+id/ll_low_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Low Battery"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_low_battery"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />


            <LinearLayout
                android:id="@+id/ll_external_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="External Power Disconnect"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_external_power_disconnect"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />


            <LinearLayout
                android:id="@+id/ll_vibration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Vibration"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_vibration"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />


            <LinearLayout
                android:id="@+id/ll_geofence_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Geofence In"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_geofence_in"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />


            <LinearLayout
                android:id="@+id/ll_geofence_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="GeoFence out"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_geofence_out"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />

            <LinearLayout
                android:id="@+id/ll_speeding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Speeding"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_speeding"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />

            <LinearLayout
                android:id="@+id/ll_towing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Towing"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_towing"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />

            <LinearLayout
                android:id="@+id/ll_engine_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Engine ON"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_engine_on"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />

            <LinearLayout
                android:id="@+id/ll_engine_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <com.voxgps.app.view.ProximaNovaLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Engine OFF"
                    android:textColor="#000000" />

                <net.igenius.customcheckbox.CustomCheckBox
                    android:id="@+id/check_engine_off"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    app:color_checked="@color/colorPrimary"
                    app:color_unchecked="@color/md_white_1000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>